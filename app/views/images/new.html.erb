<div class="form">
  <%= form_for [@user, @image] do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="form-group">
      <%= f.label :photo %>
      <%= f.file_field :photo %>
    </div>
    <%= f.submit class: "btn btn-success" %>
  <% end%>
</div>